generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  userid   Int      @id @default(autoincrement())
  username String   @db.VarChar
  email    String   @db.VarChar
  password String   @db.VarChar
  boards   boards[]
}

model boards {
  boardid Int     @id @default(autoincrement())
  title   String  @db.VarChar
  userid  Int?
  users   users?  @relation(fields: [userid], references: [userid], onDelete: Cascade, onUpdate: NoAction)
  tasks   tasks[]
}

model tasks {
  taskid    Int      @id @default(autoincrement())
  taskname  String   @db.VarChar
  limitdate DateTime @db.Date
  priority  String   @db.VarChar
  status    String   @db.VarChar
  boardid   Int?
  userid    Int?
  boards    boards?  @relation(fields: [boardid], references: [boardid], onDelete: Cascade, onUpdate: NoAction)
}
